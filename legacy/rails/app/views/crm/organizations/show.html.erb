<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <div class="flex items-center space-x-3">
          <%= link_to crm_organizations_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <h1 class="text-2xl font-semibold text-gray-900"><%= @organization.name %></h1>
        </div>
        <p class="mt-1 text-sm text-gray-500"><%= @organization.industry %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_crm_organization_path(@organization), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= link_to "New Deal", new_crm_deal_path(organization_id: @organization.id), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Info Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Organization Details</h2>

          <dl class="grid grid-cols-2 gap-4">
            <% if @organization.website.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Website</dt>
                <dd class="mt-1 text-sm text-blue-600"><%= link_to @organization.website, @organization.website, target: "_blank" %></dd>
              </div>
            <% end %>
            <% if @organization.email.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @organization.email %></dd>
              </div>
            <% end %>
            <% if @organization.phone.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Phone</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @organization.phone %></dd>
              </div>
            <% end %>
            <% if @organization.address.present? || @organization.city.present? %>
              <div class="col-span-2">
                <dt class="text-sm font-medium text-gray-500">Address</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @organization.address %><br>
                  <%= [@organization.city, @organization.country].compact.join(", ") %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Deals -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900">Deals</h2>
            <%= link_to "New Deal", new_crm_deal_path(organization_id: @organization.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200">
            <% if @deals.any? %>
              <% @deals.each do |deal| %>
                <li class="px-6 py-4">
                  <div class="flex justify-between items-center">
                    <div>
                      <%= link_to deal.title, crm_deal_path(deal), class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                      <p class="text-sm text-gray-500"><%= deal.pipeline_stage&.name %></p>
                    </div>
                    <div class="text-right">
                      <p class="text-sm font-medium text-gray-900"><%= number_to_currency(deal.value || 0, unit: "EUR ") %></p>
                      <p class="text-sm text-gray-500"><%= deal.assigned_to&.name %></p>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No deals yet</li>
            <% end %>
          </ul>
        </div>

        <!-- Projects -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900">Projects</h2>
            <%= link_to "New Project", new_project_path(organization_id: @organization.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200">
            <% if @projects.any? %>
              <% @projects.each do |project| %>
                <li class="px-6 py-4">
                  <div class="flex justify-between items-center">
                    <div>
                      <%= link_to project.name, project_path(project), class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                      <p class="text-sm text-gray-500"><%= project.status.humanize %></p>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No projects yet</li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Contacts -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Contacts</h3>
            <%= link_to "Add", new_crm_contact_path(organization_id: @organization.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200">
            <% if @contacts.any? %>
              <% @contacts.each do |contact| %>
                <li class="px-6 py-3">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                      <span class="text-blue-600 text-xs font-medium"><%= contact.full_name.split.map(&:first).join.upcase[0..1] %></span>
                    </div>
                    <div class="ml-3">
                      <%= link_to contact.full_name, crm_contact_path(contact), class: "text-sm font-medium text-gray-900 hover:text-blue-600" %>
                      <p class="text-xs text-gray-500"><%= contact.job_title %></p>
                    </div>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No contacts</li>
            <% end %>
          </ul>
        </div>

        <!-- Quotations -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Quotations</h3>
            <%= link_to "New", new_quotation_path(organization_id: @organization.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200">
            <% if @quotations.any? %>
              <% @quotations.each do |quotation| %>
                <li class="px-6 py-3">
                  <%= link_to quotation.number, quotation_path(quotation), class: "text-sm font-medium text-gray-900 hover:text-blue-600" %>
                  <p class="text-xs text-gray-500"><%= quotation.status.humanize %> - <%= number_to_currency(quotation.total, unit: "EUR ") %></p>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No quotations</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
