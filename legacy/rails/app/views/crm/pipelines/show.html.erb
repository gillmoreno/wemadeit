<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <div class="flex items-center space-x-3">
          <%= link_to crm_pipelines_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <h1 class="text-2xl font-semibold text-gray-900"><%= @pipeline.name %></h1>
          <% if @pipeline.default? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Default
            </span>
          <% end %>
        </div>
        <% if @pipeline.description.present? %>
          <p class="mt-1 text-sm text-gray-500"><%= @pipeline.description %></p>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_crm_pipeline_path(@pipeline), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <% unless @pipeline.default? %>
          <%= button_to "Delete", crm_pipeline_path(@pipeline), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this pipeline? This cannot be undone." }, class: "px-4 py-2 border border-red-300 rounded-md text-sm font-medium text-red-700 hover:bg-red-50" %>
        <% end %>
      </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="bg-white shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500">Total Stages</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @stages.count %></dd>
      </div>
      <div class="bg-white shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500">Total Deals</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= @pipeline.deals.count %></dd>
      </div>
      <div class="bg-white shadow rounded-lg p-4">
        <dt class="text-sm font-medium text-gray-500">Pipeline Value</dt>
        <dd class="mt-1 text-2xl font-semibold text-gray-900">
          <%= number_to_currency(@pipeline.deals.sum(:value), unit: "â‚¬") %>
        </dd>
      </div>
    </div>

    <!-- Stages Section -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900">Pipeline Stages</h3>
        <button type="button"
                onclick="document.getElementById('new-stage-form').classList.toggle('hidden')"
                class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
          <svg class="-ml-0.5 mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add Stage
        </button>
      </div>

      <!-- New Stage Form (hidden by default) -->
      <div id="new-stage-form" class="hidden px-6 py-4 bg-gray-50 border-b border-gray-200">
        <%= form_with url: crm_pipeline_pipeline_stages_path(@pipeline), scope: :pipeline_stage, class: "flex items-end gap-4" do |form| %>
          <div class="flex-1">
            <%= form.label :name, "Stage Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm", required: true %>
          </div>
          <div class="w-32">
            <%= form.label :color, "Color", class: "block text-sm font-medium text-gray-700" %>
            <%= form.color_field :color, value: "#3B82F6", class: "mt-1 block w-full h-9 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
          <div class="w-24">
            <%= form.label :probability, "Prob %", class: "block text-sm font-medium text-gray-700" %>
            <%= form.number_field :probability, min: 0, max: 100, step: 5, value: 50, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
          </div>
          <div class="flex space-x-2">
            <%= form.submit "Add", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
            <button type="button" onclick="document.getElementById('new-stage-form').classList.add('hidden')" class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
              Cancel
            </button>
          </div>
        <% end %>
      </div>

      <!-- Stages List -->
      <div class="divide-y divide-gray-200">
        <% if @stages.any? %>
          <% @stages.each_with_index do |stage, index| %>
            <div class="px-6 py-4 flex items-center justify-between hover:bg-gray-50" data-stage-id="<%= stage.id %>">
              <div class="flex items-center space-x-4">
                <span class="text-gray-400 text-sm font-medium w-6"><%= index + 1 %></span>
                <div class="w-4 h-4 rounded-full" style="background-color: <%= stage.color || '#9CA3AF' %>"></div>
                <div>
                  <span class="font-medium text-gray-900"><%= stage.name %></span>
                  <% if stage.probability.present? %>
                    <span class="ml-2 text-sm text-gray-500">(<%= stage.probability.to_i %>% probability)</span>
                  <% end %>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-500"><%= stage.deals.count %> deals</span>
                <div class="flex space-x-1">
                  <%= link_to edit_crm_pipeline_pipeline_stage_path(@pipeline, stage), class: "text-gray-400 hover:text-gray-500" do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                  <% if stage.deals.empty? %>
                    <%= button_to crm_pipeline_pipeline_stage_path(@pipeline, stage), method: :delete, data: { turbo_confirm: "Delete this stage?" }, class: "text-gray-400 hover:text-red-500" do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="px-6 py-12 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="48" height="48">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No stages</h3>
            <p class="mt-1 text-sm text-gray-500">Add stages to define your sales process.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
