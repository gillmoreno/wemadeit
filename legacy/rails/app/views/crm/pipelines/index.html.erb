<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Pipelines</h1>
        <p class="mt-1 text-sm text-gray-600">Configure sales pipelines and stages</p>
      </div>
      <%= link_to new_crm_pipeline_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Pipeline
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @pipelines.each do |pipeline| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <div class="p-6">
            <div class="flex items-start justify-between">
              <div>
                <h3 class="text-lg font-medium text-gray-900">
                  <%= link_to pipeline.name, crm_pipeline_path(pipeline), class: "hover:text-blue-600" %>
                </h3>
                <% if pipeline.default? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 mt-1">
                    Default
                  </span>
                <% end %>
              </div>
              <div class="flex space-x-1">
                <%= link_to edit_crm_pipeline_path(pipeline), class: "text-gray-400 hover:text-gray-500" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                <% end %>
              </div>
            </div>

            <% if pipeline.description.present? %>
              <p class="mt-2 text-sm text-gray-500"><%= pipeline.description %></p>
            <% end %>

            <div class="mt-4">
              <h4 class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Stages (<%= pipeline.pipeline_stages.count %>)</h4>
              <div class="flex flex-wrap gap-1">
                <% pipeline.pipeline_stages.each do |stage| %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700"
                        <% if stage.color.present? %>style="background-color: <%= stage.color %>20; color: <%= stage.color %>"<% end %>>
                    <%= stage.name %>
                  </span>
                <% end %>
              </div>
            </div>

            <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between text-sm">
              <span class="text-gray-500"><%= pipeline.deals.count %> deals</span>
              <%= link_to "View Pipeline", crm_pipeline_path(pipeline), class: "text-blue-600 hover:text-blue-800" %>
            </div>
          </div>
        </div>
      <% end %>

      <% if @pipelines.empty? %>
        <div class="col-span-full text-center py-12 bg-white rounded-lg shadow">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="48" height="48">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17V7m0 10a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h2a2 2 0 012 2m0 10a2 2 0 002 2h2a2 2 0 002-2M9 7a2 2 0 012-2h2a2 2 0 012 2m0 10V7m0 10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No pipelines</h3>
          <p class="mt-1 text-sm text-gray-500">Create your first sales pipeline to start managing deals.</p>
          <div class="mt-6">
            <%= link_to new_crm_pipeline_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
              New Pipeline
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
