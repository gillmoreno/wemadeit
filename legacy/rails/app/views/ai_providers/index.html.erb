<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">AI Providers</h1>
        <p class="mt-1 text-sm text-gray-600">Configure AI services for transcription, summarization, and more</p>
      </div>
      <%= link_to new_ai_provider_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Add Provider
      <% end %>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Provider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">API Key</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @ai_providers.any? %>
            <% @ai_providers.each do |provider| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="h-10 w-10 rounded-lg flex items-center justify-center
                      <%= case provider.name
                          when 'anthropic' then 'bg-orange-100'
                          when 'openai' then 'bg-green-100'
                          when 'groq' then 'bg-purple-100'
                          end %>">
                      <span class="text-lg font-bold
                        <%= case provider.name
                            when 'anthropic' then 'text-orange-600'
                            when 'openai' then 'text-green-600'
                            when 'groq' then 'text-purple-600'
                            end %>">
                        <%= provider.name.first.upcase %>
                      </span>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">
                        <%= link_to provider.name.capitalize, ai_provider_path(provider), class: "hover:text-blue-600" %>
                      </div>
                      <% if provider.default? %>
                        <span class="text-xs text-blue-600">Default</span>
                      <% end %>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= provider.model || "Not set" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if provider.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      Active
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      Inactive
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if provider.api_key_encrypted.present? %>
                    <span class="font-mono">***<%= provider.api_key_encrypted.last(4) rescue "****" %></span>
                  <% else %>
                    <span class="text-red-500">Not configured</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex justify-end space-x-2">
                    <%= link_to "Edit", edit_ai_provider_path(provider), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                    <%= button_to "Delete", ai_provider_path(provider), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this provider?" }, class: "inline-flex items-center px-3 py-1.5 border border-red-300 text-xs font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
                  </div>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center text-gray-500">
                <p>No AI providers configured</p>
                <%= link_to "Add your first provider", new_ai_provider_path, class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
