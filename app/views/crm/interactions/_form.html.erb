<%= form_with model: [:crm, interaction], class: "space-y-6" do |form| %>
  <% if interaction.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
      <ul class="list-disc list-inside">
        <% interaction.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <!-- Interaction Type -->
    <div>
      <%= form.label :interaction_type, "Type", class: "block text-sm font-medium text-gray-700 mb-3" %>
      <div class="flex flex-wrap gap-4" data-controller="radio-buttons">
        <% Interaction.interaction_types.keys.each do |type| %>
          <label class="relative flex items-center cursor-pointer" data-radio-buttons-target="label">
            <%= form.radio_button :interaction_type, type, class: "sr-only", data: { action: "change->radio-buttons#select" } %>
            <div class="flex items-center px-4 py-2 border border-gray-200 rounded-md hover:bg-gray-50 transition-colors" data-radio-buttons-target="button">
              <% case type %>
              <% when 'call' %>
                <svg class="h-5 w-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              <% when 'email' %>
                <svg class="h-5 w-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              <% when 'meeting' %>
                <svg class="h-5 w-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              <% when 'note' %>
                <svg class="h-5 w-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              <% end %>
              <span class="text-sm font-medium text-gray-700"><%= type.humanize %></span>
            </div>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Contact & Organization -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :contact_id, "Contact", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :contact_id, Contact.includes(:organization).order(:first_name, :last_name), :id, ->(c) { "#{c.full_name} (#{c.organization.name})" }, { include_blank: "Select contact (optional)" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :organization_id, "Organization", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :organization_id, Organization.order(:name), :id, :name, { include_blank: "Select organization (optional)" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>
    </div>

    <!-- Deal (optional) -->
    <div>
      <%= form.label :deal_id, "Related Deal", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :deal_id, Deal.includes(:organization).order(created_at: :desc), :id, ->(d) { "#{d.title} (#{d.organization.name})" }, { include_blank: "Select deal (optional)" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Subject -->
    <div>
      <%= form.label :subject, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Brief summary of the interaction" %>
    </div>

    <!-- Body/Description -->
    <div>
      <%= form.label :body, "Description", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Details about the interaction..." %>
    </div>

    <!-- Date/Time -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :occurred_at, "Date & Time", class: "block text-sm font-medium text-gray-700" %>
        <%= form.datetime_local_field :occurred_at, step: 60, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :duration_minutes, "Duration (minutes)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :duration_minutes, min: 0, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Optional" %>
      </div>
    </div>
  </div>

  <!-- Follow-up Section -->
  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <h3 class="text-lg font-medium text-gray-900">Follow-up</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= form.label :follow_up_date, "Follow-up Date", class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :follow_up_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
      </div>

      <div class="flex items-end pb-2">
        <label class="flex items-center">
          <%= form.check_box :follow_up_completed, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <span class="ml-2 text-sm text-gray-700">Follow-up completed</span>
        </label>
      </div>
    </div>

    <div>
      <%= form.label :follow_up_notes, "Follow-up Notes", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :follow_up_notes, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "What needs to be done..." %>
    </div>
  </div>

  <!-- Audio & Transcript Section -->
  <div class="bg-white shadow rounded-lg p-6 space-y-6" data-controller="file-upload">
    <h3 class="text-lg font-medium text-gray-900">Audio & Transcript</h3>

    <!-- Audio File Upload -->
    <div>
      <%= form.label :audio_file, "Audio Recording", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <div class="relative"
           data-file-upload-target="dropzone"
           data-action="dragover->file-upload#dragover dragenter->file-upload#dragenter dragleave->file-upload#dragleave drop->file-upload#drop">
        <div class="flex items-center justify-center p-8 border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 hover:bg-gray-100 hover:border-gray-400 transition-colors cursor-pointer"
             data-file-upload-target="droparea">
          <div class="flex flex-col items-center space-y-3">
            <!-- Microphone icon -->
            <div class="p-3 bg-blue-50 rounded-full">
              <svg class="h-6 w-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
              </svg>
            </div>
            <div class="text-center">
              <label for="audio_file" class="cursor-pointer">
                <span class="text-sm font-medium text-blue-600 hover:text-blue-500">Choose a file</span>
                <span class="text-sm text-gray-500"> or drag and drop</span>
              </label>
              <p class="text-xs text-gray-400 mt-1">MP3, WAV, M4A, WebM up to 100MB</p>
            </div>
          </div>
        </div>
        <%= form.file_field :audio_file, accept: "audio/*", class: "sr-only", id: "audio_file", data: { file_upload_target: "input", action: "change->file-upload#fileSelected" } %>
      </div>
      <!-- File selected indicator -->
      <div class="mt-3 hidden" data-file-upload-target="fileInfo">
        <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
          <div class="flex items-center space-x-3">
            <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-green-800" data-file-upload-target="fileName">File selected</span>
          </div>
          <button type="button" class="text-green-600 hover:text-green-800" data-action="click->file-upload#removeFile">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
      <% if interaction.audio_file.attached? %>
        <div class="mt-3 flex items-center justify-between p-3 bg-blue-50 border border-blue-200 rounded-lg">
          <div class="flex items-center space-x-3">
            <svg class="h-5 w-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-blue-800">Current: <%= interaction.audio_file.filename %></span>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Transcription Language -->
    <div>
      <%= form.label :transcription_language, "Transcription Language", class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :transcription_language,
          [["Italian", "it"], ["English", "en"], ["Spanish", "es"], ["French", "fr"], ["German", "de"], ["Portuguese", "pt"]],
          {},
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <!-- Transcript -->
    <div>
      <%= form.label :transcript, "Raw Transcript", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :transcript, rows: 6, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Paste or type transcript here, or upload audio to auto-transcribe..." %>
      <p class="mt-1 text-xs text-gray-500">You can paste a transcript manually or upload audio for automatic transcription.</p>
    </div>

    <!-- Cleaned Transcript (read-only if exists) -->
    <% if interaction.cleaned_transcript.present? %>
      <div>
        <label class="block text-sm font-medium text-gray-700">Cleaned Transcript</label>
        <div class="mt-1 p-4 bg-gray-50 rounded-md border border-gray-200">
          <div class="prose prose-sm max-w-none text-gray-700">
            <%= simple_format(interaction.cleaned_transcript) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", crm_interactions_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= form.submit interaction.persisted? ? "Update Interaction" : "Log Interaction", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
