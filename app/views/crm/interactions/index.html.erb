<div class="py-6">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Interactions</h1>
        <p class="mt-1 text-sm text-gray-600">Track all client communications</p>
      </div>
      <%= link_to new_crm_interaction_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Log Interaction
      <% end %>
    </div>

    <% if @pending_follow_ups.any? %>
      <div class="mb-6 bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded-r-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              <strong><%= @pending_follow_ups.count %> pending follow-up<%= @pending_follow_ups.count > 1 ? 's' : '' %></strong> require attention
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Follow-up</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @interactions.any? %>
            <% @interactions.each do |interaction| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case interaction.interaction_type
                        when 'call' then 'bg-green-100 text-green-800'
                        when 'email' then 'bg-blue-100 text-blue-800'
                        when 'meeting' then 'bg-purple-100 text-purple-800'
                        when 'note' then 'bg-gray-100 text-gray-800'
                        end %>">
                    <% case interaction.interaction_type %>
                    <% when 'call' %>
                      <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    <% when 'email' %>
                      <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    <% when 'meeting' %>
                      <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    <% when 'note' %>
                      <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    <%= interaction.interaction_type.humanize %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <%= link_to interaction.subject || "(No subject)", crm_interaction_path(interaction), class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if interaction.contact %>
                    <%= link_to interaction.contact.full_name, crm_contact_path(interaction.contact), class: "hover:text-blue-600" %>
                    <% if interaction.organization %>
                      <br><span class="text-xs text-gray-400"><%= interaction.organization.name %></span>
                    <% end %>
                  <% elsif interaction.organization %>
                    <%= link_to interaction.organization.name, crm_organization_path(interaction.organization), class: "hover:text-blue-600" %>
                  <% else %>
                    -
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= interaction.occurred_at&.strftime("%b %d, %Y") %>
                  <% if interaction.occurred_at %>
                    <br><span class="text-xs text-gray-400"><%= interaction.occurred_at.strftime("%H:%M") %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if interaction.follow_up_date %>
                    <% if interaction.follow_up_completed %>
                      <span class="text-green-600">Completed</span>
                    <% elsif interaction.overdue_follow_up? %>
                      <span class="text-red-600 font-medium">Overdue - <%= interaction.follow_up_date.strftime("%b %d") %></span>
                    <% else %>
                      <span class="text-yellow-600"><%= interaction.follow_up_date.strftime("%b %d, %Y") %></span>
                    <% end %>
                  <% else %>
                    <span class="text-gray-400">-</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                  <%= link_to "View", crm_interaction_path(interaction), class: "text-blue-600 hover:text-blue-900" %>
                  <%= link_to "Edit", edit_crm_interaction_path(interaction), class: "text-gray-600 hover:text-gray-900" %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                <p>No interactions logged yet</p>
                <%= link_to "Log your first interaction", new_crm_interaction_path, class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
