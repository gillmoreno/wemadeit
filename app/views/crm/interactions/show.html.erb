<div class="py-6">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <div class="flex items-center space-x-3">
          <%= link_to crm_interactions_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <h1 class="text-2xl font-semibold text-gray-900"><%= @interaction.subject || "(No subject)" %></h1>
        </div>
        <div class="mt-2 flex items-center space-x-4">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @interaction.interaction_type
                when 'call' then 'bg-green-100 text-green-800'
                when 'email' then 'bg-blue-100 text-blue-800'
                when 'meeting' then 'bg-purple-100 text-purple-800'
                when 'note' then 'bg-gray-100 text-gray-800'
                end %>">
            <%= @interaction.interaction_type.humanize %>
          </span>
          <span class="text-sm text-gray-500">
            <%= @interaction.occurred_at&.strftime("%B %d, %Y at %H:%M") %>
          </span>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_crm_interaction_path(@interaction), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= button_to "Delete", crm_interaction_path(@interaction), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this interaction?" }, class: "px-4 py-2 border border-red-300 rounded-md text-sm font-medium text-red-700 hover:bg-red-50" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Details Card -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Details</h2>

          <% if @interaction.body.present? %>
            <div class="prose prose-sm max-w-none text-gray-700">
              <%= simple_format(@interaction.body) %>
            </div>
          <% else %>
            <p class="text-gray-500 italic">No description provided</p>
          <% end %>

          <% if @interaction.duration_minutes.present? %>
            <div class="mt-4 pt-4 border-t border-gray-200">
              <span class="text-sm text-gray-500">Duration:</span>
              <span class="text-sm font-medium text-gray-900"><%= @interaction.duration_minutes %> minutes</span>
            </div>
          <% end %>
        </div>

        <!-- Audio & Transcript Card -->
        <% if @interaction.audio_file.attached? || @interaction.has_transcript? %>
          <div class="bg-white shadow rounded-lg p-6" data-controller="transcript-actions" data-transcript-actions-interaction-id-value="<%= @interaction.id %>">
            <div class="flex justify-between items-start mb-4">
              <h2 class="text-lg font-medium text-gray-900">Audio & Transcript</h2>
              <% if @interaction.transcription_status.present? %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case @interaction.transcription_status
                      when 'pending' then 'bg-gray-100 text-gray-800'
                      when 'processing' then 'bg-yellow-100 text-yellow-800'
                      when 'completed' then 'bg-green-100 text-green-800'
                      when 'failed' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= @interaction.transcription_status.humanize %>
                </span>
              <% end %>
            </div>

            <!-- Audio Player -->
            <% if @interaction.audio_file.attached? %>
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-500 mb-2">Recording</label>
                <audio controls class="w-full">
                  <source src="<%= url_for(@interaction.audio_file) %>" type="<%= @interaction.audio_file.content_type %>">
                  Your browser does not support the audio element.
                </audio>
                <div class="mt-2 flex space-x-2">
                  <% unless @interaction.transcription_completed? || @interaction.transcription_processing? %>
                    <button type="button" data-action="click->transcript-actions#transcribe" class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                      <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                      </svg>
                      Transcribe Audio
                    </button>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- Cleaned Transcript (Primary Display) -->
            <% if @interaction.cleaned_transcript.present? %>
              <div class="mb-6">
                <label class="block text-sm font-medium text-gray-500 mb-2">Cleaned Transcript</label>
                <div class="p-4 bg-gray-50 rounded-md border border-gray-200">
                  <div class="prose prose-sm max-w-none text-gray-700">
                    <%= simple_format(@interaction.cleaned_transcript) %>
                  </div>
                </div>
              </div>
            <% end %>

            <!-- Raw Transcript (Collapsible) -->
            <% if @interaction.transcript.present? %>
              <div data-controller="collapsible">
                <button type="button" data-action="click->collapsible#toggle" class="flex items-center text-sm font-medium text-gray-500 hover:text-gray-700">
                  <svg data-collapsible-target="icon" class="h-4 w-4 mr-1 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Raw Transcript
                </button>
                <div data-collapsible-target="content" class="hidden mt-2">
                  <div class="p-4 bg-gray-100 rounded-md border border-gray-200">
                    <div class="prose prose-sm max-w-none text-gray-600 text-xs font-mono whitespace-pre-wrap">
                      <%= @interaction.transcript %>
                    </div>
                  </div>
                  <div class="mt-2">
                    <% unless @interaction.cleaned_transcript.present? %>
                      <button type="button" data-action="click->transcript-actions#clean" class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                        </svg>
                        Clean with AI
                      </button>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

        <!-- Follow-up Card -->
        <% if @interaction.follow_up_date.present? %>
          <div class="bg-white shadow rounded-lg p-6">
            <div class="flex justify-between items-start">
              <h2 class="text-lg font-medium text-gray-900">Follow-up</h2>
              <% unless @interaction.follow_up_completed %>
                <%= button_to "Mark Complete", complete_follow_up_crm_interaction_path(@interaction), method: :patch, class: "px-3 py-1 text-sm font-medium text-green-700 bg-green-100 rounded-md hover:bg-green-200" %>
              <% end %>
            </div>

            <div class="mt-4">
              <div class="flex items-center">
                <% if @interaction.follow_up_completed %>
                  <svg class="h-5 w-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-green-700 font-medium">Completed</span>
                <% elsif @interaction.overdue_follow_up? %>
                  <svg class="h-5 w-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-red-700 font-medium">Overdue - <%= @interaction.follow_up_date.strftime("%B %d, %Y") %></span>
                <% else %>
                  <svg class="h-5 w-5 text-yellow-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-yellow-700 font-medium">Due <%= @interaction.follow_up_date.strftime("%B %d, %Y") %></span>
                <% end %>
              </div>

              <% if @interaction.follow_up_notes.present? %>
                <p class="mt-3 text-sm text-gray-600"><%= @interaction.follow_up_notes %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Related Info -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Related</h3>

          <dl class="space-y-4">
            <% if @interaction.contact %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Contact</dt>
                <dd class="mt-1">
                  <%= link_to @interaction.contact.full_name, crm_contact_path(@interaction.contact), class: "text-sm text-blue-600 hover:text-blue-800" %>
                </dd>
              </div>
            <% end %>

            <% if @interaction.organization %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Organization</dt>
                <dd class="mt-1">
                  <%= link_to @interaction.organization.name, crm_organization_path(@interaction.organization), class: "text-sm text-blue-600 hover:text-blue-800" %>
                </dd>
              </div>
            <% end %>

            <% if @interaction.deal %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Deal</dt>
                <dd class="mt-1">
                  <%= link_to @interaction.deal.title, crm_deal_path(@interaction.deal), class: "text-sm text-blue-600 hover:text-blue-800" %>
                </dd>
              </div>
            <% end %>

            <div>
              <dt class="text-sm font-medium text-gray-500">Logged by</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @interaction.user&.name || "Unknown" %></dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Created</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @interaction.created_at.strftime("%B %d, %Y") %></dd>
            </div>
          </dl>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Actions</h3>
          <div class="space-y-2">
            <% if @interaction.contact %>
              <%= link_to new_crm_interaction_path(contact_id: @interaction.contact_id), class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
                Log Another Interaction
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
