<%= form_with model: [:crm, deal], class: "space-y-6" do |form| %>
  <% if deal.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md">
      <ul class="list-disc list-inside">
        <% deal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6 space-y-6">
    <!-- Basic Info -->
    <div>
      <h3 class="text-lg font-medium text-gray-900 mb-4">Deal Information</h3>

      <div class="grid grid-cols-1 gap-6">
        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :organization_id, "Organization", class: "block text-sm font-medium text-gray-700" %>
            <%= form.collection_select :organization_id, Organization.order(:name), :id, :name, { prompt: "Select organization" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>

          <div>
            <%= form.label :contact_id, "Contact", class: "block text-sm font-medium text-gray-700" %>
            <%= form.collection_select :contact_id, Contact.order(:first_name, :last_name), :id, :full_name, { prompt: "Select contact" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
    </div>

    <!-- Pipeline & Value -->
    <div class="border-t border-gray-200 pt-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Pipeline & Value</h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :pipeline_stage_id, "Stage", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :pipeline_stage_id, PipelineStage.includes(:pipeline).order(:position), :id, ->(s) { "#{s.pipeline.name} - #{s.name}" }, { prompt: "Select stage" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :assigned_to_id, "Assigned To", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :assigned_to_id, User.order(:name), :id, :name, { prompt: "Select user" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :value, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">EUR</span>
            </div>
            <%= form.number_field :value, step: 0.01, class: "block w-full pl-12 rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
          </div>
        </div>

        <div>
          <%= form.label :probability, "Probability (%)", class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :probability, min: 0, max: 100, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :expected_close_date, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :expected_close_date, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :source, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :source, placeholder: "e.g., Referral, Website, Cold call", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", crm_deals_path, class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
    <%= form.submit deal.persisted? ? "Update Deal" : "Create Deal", class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 cursor-pointer" %>
  </div>
<% end %>
