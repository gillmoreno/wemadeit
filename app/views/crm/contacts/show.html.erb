<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <div class="flex items-center space-x-3">
          <%= link_to crm_contacts_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <h1 class="text-2xl font-semibold text-gray-900"><%= @contact.full_name %></h1>
          <% if @contact.primary_contact %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Primary</span>
          <% end %>
        </div>
        <p class="mt-1 text-sm text-gray-500"><%= @contact.job_title %> at <%= link_to @contact.organization.name, crm_organization_path(@contact.organization), class: "text-blue-600 hover:text-blue-800" %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_crm_contact_path(@contact), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= link_to "Log Interaction", new_crm_interaction_path(contact_id: @contact.id), class: "px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Contact Info -->
        <div class="bg-white shadow rounded-lg p-6">
          <h2 class="text-lg font-medium text-gray-900 mb-4">Contact Information</h2>
          <dl class="grid grid-cols-2 gap-4">
            <% if @contact.email.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Email</dt>
                <dd class="mt-1 text-sm text-blue-600"><%= mail_to @contact.email %></dd>
              </div>
            <% end %>
            <% if @contact.phone.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Phone</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @contact.phone %></dd>
              </div>
            <% end %>
          </dl>
          <% if @contact.memo.present? %>
            <div class="mt-6 pt-6 border-t border-gray-200">
              <dt class="text-sm font-medium text-gray-500">Notes</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @contact.memo %></dd>
            </div>
          <% end %>
        </div>

        <!-- Interactions -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-medium text-gray-900">Interactions</h2>
            <%= link_to "Log Interaction", new_crm_interaction_path(contact_id: @contact.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200">
            <% if @interactions.any? %>
              <% @interactions.each do |interaction| %>
                <li class="px-6 py-4">
                  <div class="flex justify-between">
                    <div>
                      <p class="text-sm font-medium text-gray-900"><%= interaction.subject %></p>
                      <p class="text-sm text-gray-500"><%= interaction.interaction_type.humanize %> - <%= interaction.interaction_date&.strftime("%b %d, %Y") %></p>
                    </div>
                    <%= link_to "View", crm_interaction_path(interaction), class: "text-sm text-blue-600 hover:text-blue-800" %>
                  </div>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No interactions recorded</li>
            <% end %>
          </ul>
        </div>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Notes -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-medium text-gray-900">Notes</h3>
            <%= link_to "Add", new_note_path(notable_type: "Contact", notable_id: @contact.id), class: "text-sm text-blue-600 hover:text-blue-800" %>
          </div>
          <ul class="divide-y divide-gray-200 max-h-64 overflow-y-auto">
            <% if @notes.any? %>
              <% @notes.each do |note| %>
                <li class="px-6 py-3">
                  <p class="text-sm font-medium text-gray-900"><%= note.title %></p>
                  <p class="text-xs text-gray-500"><%= note.created_at.strftime("%b %d") %></p>
                </li>
              <% end %>
            <% else %>
              <li class="px-6 py-4 text-sm text-gray-500">No notes</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
