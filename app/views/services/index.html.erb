<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-gray-900">Services</h1>
        <p class="mt-1 text-sm text-gray-600">Service catalog for quotation line items</p>
      </div>
      <%= link_to new_service_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700" do %>
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Service
      <% end %>
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Service</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @services.any? %>
            <% @services.group_by(&:category).each do |category, services| %>
              <% services.each_with_index do |service, index| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900">
                      <%= link_to service.name, service_path(service), class: "hover:text-blue-600" %>
                    </div>
                    <% if service.description.present? %>
                      <div class="text-xs text-gray-500 truncate max-w-xs"><%= service.description.truncate(50) %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                    <%= service.code || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                      <%= case service.category
                          when 'development' then 'bg-blue-100 text-blue-800'
                          when 'design' then 'bg-purple-100 text-purple-800'
                          when 'consulting' then 'bg-green-100 text-green-800'
                          when 'support' then 'bg-orange-100 text-orange-800'
                          end %>">
                      <%= service.category&.humanize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <% if service.unit_price %>
                      <%= number_to_currency(service.unit_price, unit: "â‚¬") %>
                      <% if service.unit_type.present? %>
                        <span class="text-gray-500">/ <%= service.unit_type %></span>
                      <% end %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if service.active? %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Active
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                        Inactive
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                    <%= link_to "Edit", edit_service_path(service), class: "text-blue-600 hover:text-blue-900" %>
                    <%= button_to "Deactivate", service_path(service), method: :delete, data: { turbo_confirm: "Are you sure you want to deactivate this service?" }, class: "text-red-600 hover:text-red-900" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                <p>No services in the catalog</p>
                <%= link_to "Add your first service", new_service_path, class: "text-blue-600 hover:text-blue-800" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
