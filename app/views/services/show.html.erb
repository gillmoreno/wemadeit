<div class="py-6">
  <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex justify-between items-start mb-6">
      <div>
        <div class="flex items-center space-x-3">
          <%= link_to services_path, class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <h1 class="text-2xl font-semibold text-gray-900"><%= @service.name %></h1>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
            <%= case @service.category
                when 'development' then 'bg-blue-100 text-blue-800'
                when 'design' then 'bg-purple-100 text-purple-800'
                when 'consulting' then 'bg-green-100 text-green-800'
                when 'support' then 'bg-orange-100 text-orange-800'
                end %>">
            <%= @service.category&.humanize %>
          </span>
          <% if @service.active? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              Inactive
            </span>
          <% end %>
        </div>
        <% if @service.code.present? %>
          <p class="mt-1 text-sm text-gray-500 font-mono"><%= @service.code %></p>
        <% end %>
      </div>
      <div class="flex space-x-2">
        <%= link_to "Edit", edit_service_path(@service), class: "px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50" %>
        <%= button_to "Deactivate", service_path(@service), method: :delete, data: { turbo_confirm: "Are you sure you want to deactivate this service?" }, class: "px-4 py-2 border border-red-300 rounded-md text-sm font-medium text-red-700 hover:bg-red-50" %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Service Details -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Details</h3>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @service.name %></dd>
          </div>
          <% if @service.code.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Code</dt>
              <dd class="mt-1 text-sm text-gray-900 font-mono"><%= @service.code %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Category</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @service.category&.humanize || "Not set" %></dd>
          </div>
          <% if @service.description.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Description</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @service.description %></dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Pricing -->
      <div class="bg-white shadow rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Pricing</h3>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Unit Price</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">
              <% if @service.unit_price %>
                <%= number_to_currency(@service.unit_price, unit: "â‚¬") %>
              <% else %>
                <span class="text-gray-400">Not set</span>
              <% end %>
            </dd>
          </div>
          <% if @service.unit_type.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Unit Type</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @service.unit_type %></dd>
            </div>
          <% end %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Usage</dt>
            <dd class="mt-1 text-sm text-gray-900">
              Used in <%= @service.quotation_items.count %> quotation line items
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>
