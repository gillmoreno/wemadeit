<div class="py-6">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <%= link_to project_task_board_path(@task.project, @task.task_board), class: "text-gray-400 hover:text-gray-500" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          <% end %>
          <div>
            <h1 class="text-2xl font-semibold text-gray-900"><%= @task.title %></h1>
            <p class="text-sm text-gray-600"><%= @task.project.name %> &middot; <%= @task.task_column.name %></p>
          </div>
        </div>
        <div class="flex space-x-3">
          <%= link_to "Edit", edit_task_path(@task), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= button_to "Delete", task_path(@task), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this task?" }, class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Description -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Description</h3>
          <% if @task.description.present? %>
            <p class="text-gray-700 whitespace-pre-wrap"><%= @task.description %></p>
          <% else %>
            <p class="text-gray-400 italic">No description provided</p>
          <% end %>
        </div>

        <!-- Labels -->
        <% if @task.labels.any? %>
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Labels</h3>
            <div class="flex flex-wrap gap-2">
              <% @task.labels.each do |label| %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium text-white" style="background-color: <%= label.color %>;">
                  <%= label.name %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Sidebar -->
      <div class="space-y-6">
        <!-- Status & Priority -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Details</h3>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= @task.task_column.name %>
                </span>
              </dd>
            </div>

            <% if @task.priority.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Priority</dt>
                <dd class="mt-1">
                  <% priority_colors = { "low" => "bg-gray-100 text-gray-800", "medium" => "bg-yellow-100 text-yellow-800", "high" => "bg-orange-100 text-orange-800", "urgent" => "bg-red-100 text-red-800" } %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= priority_colors[@task.priority] %>">
                    <%= @task.priority.humanize %>
                  </span>
                </dd>
              </div>
            <% end %>

            <% if @task.due_date.present? %>
              <div>
                <dt class="text-sm font-medium text-gray-500">Due Date</dt>
                <dd class="mt-1 text-sm <%= @task.overdue? ? 'text-red-600 font-medium' : 'text-gray-900' %>">
                  <%= @task.due_date.strftime("%B %d, %Y") %>
                  <% if @task.overdue? %>
                    <span class="text-red-600">(Overdue)</span>
                  <% end %>
                </dd>
              </div>
            <% end %>
          </dl>
        </div>

        <!-- Assignment -->
        <div class="bg-white shadow rounded-lg p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">People</h3>
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Assigned to</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @task.assigned_to %>
                  <div class="flex items-center">
                    <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-blue-100 text-blue-600 text-sm font-medium mr-2">
                      <%= @task.assigned_to.name.split.map(&:first).join.upcase[0..1] %>
                    </span>
                    <%= @task.assigned_to.name %>
                  </div>
                <% else %>
                  <span class="text-gray-400">Unassigned</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Created by</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @task.created_by.name %>
              </dd>
            </div>
          </dl>
        </div>

        <!-- Time Tracking -->
        <% if @task.estimated_hours.to_i > 0 || @task.actual_hours.to_i > 0 %>
          <div class="bg-white shadow rounded-lg p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Time Tracking</h3>
            <dl class="space-y-4">
              <% if @task.estimated_hours.to_i > 0 %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Estimated</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @task.estimated_hours %> hours</dd>
                </div>
              <% end %>

              <div>
                <dt class="text-sm font-medium text-gray-500">Actual</dt>
                <dd class="mt-1 text-sm text-gray-900"><%= @task.actual_hours || 0 %> hours</dd>
              </div>

              <% if @task.estimated_hours.to_i > 0 %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Progress</dt>
                  <dd class="mt-1">
                    <% progress = [(@task.actual_hours.to_f / @task.estimated_hours * 100), 100].min %>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                      <div class="bg-blue-600 h-2 rounded-full" style="width: <%= progress %>%"></div>
                    </div>
                    <p class="text-xs text-gray-500 mt-1"><%= progress.round %>% complete</p>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
